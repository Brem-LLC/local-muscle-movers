---
const { block } = Astro.props
---

<section
	class='relative z-[-1] flex w-full items-center bg-cover bg-fixed bg-center bg-no-repeat px-7 pb-12 pt-44 bg-blend-color-burn md:h-96 md:pt-40 lg:px-10'
	style=`background-image: url(${block.backgroundImage})`>
	<div class="mx-auto w-full max-w-7xl">
		<h1 set:html={block.title} class="text-4xl font-bold text-white" />
		{block.description && <p class="mt-4 w-full max-w-lg text-lg text-white" set:html={block.description} />}
	</div>
</section>