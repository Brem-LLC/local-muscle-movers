---
const { title, description } = Astro.props as Props

export interface Props {
	title: string
	description?: string
}
---

<section
	class="relative z-0 flex w-full items-center bg-primary/60 bg-[url('https://flowbite.s3.amazonaws.com/blocks/marketing-ui/hero/coast-house-view.jpg')] bg-cover bg-fixed bg-center bg-no-repeat px-7 pb-12 pt-24 bg-blend-color-burn md:h-96 md:pt-20 lg:px-10">
	<div class="mx-auto w-full max-w-7xl">
		<h1 set:html={title} class="text-4xl font-bold text-white" />
		{description && <p class="mt-4 w-full max-w-lg text-lg text-white" set:html={description} />}
	</div>
</section>
