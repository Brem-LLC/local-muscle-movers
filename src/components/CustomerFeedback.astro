---
const { block } = Astro.props
---

<section class="relative z-0 py-16 md:py-32">
	<div class="mx-auto w-full max-w-7xl px-4">
		<div class="mx-auto mb-16 w-full max-w-2xl pb-3 text-center">
			<h3 class="mx-auto mb-5 w-fit bg-gradient-1 bg-clip-text font-primary text-[38px] text-transparent">{block.header}</h3>
			<p class="font-primary text-lg leading-relaxed tracking-wider text-primary-500">{block.subtext}</p>
		</div>

		<div class="mx-auto grid max-w-4xl grid-cols-1 gap-4 sm:grid-cols-2 md:grid-cols-3 lg:gap-9">
			{
				block.testimonials.map((item: any) => (
					<div class="border-2 border-primary-500 p-5 text-white">
						<p class="text-sm leading-relaxed">{item.review}</p>
						<h3 class="mt-5 w-fit bg-gradient-1 bg-clip-text font-primary text-base italic text-transparent">- {item.personName}</h3>
					</div>
				))
			}
		</div>
		<img
			src={block.image}
			alt="background"
			class="pointer-events-none absolute inset-0 -z-20 h-full w-full object-cover"
		/>
	</div>
</section>
