---
const { heroData } = Astro.props
---

<section class="flex items-end bg-primary/60 bg-cover bg-fixed bg-center bg-no-repeat px-7 pt-44 bg-blend-color-burn lg:px-10 lg:pt-40" style=`background-image: url(${heroData.bannerImage})`>
	<div class="z-1 relative mx-auto w-full max-w-screen-xl py-8 text-white lg:pb-20 lg:pt-16 xl:px-0">
		<div class="mb-6 max-w-screen-md lg:mb-0">
			<h1 class="mb-4 text-4xl font-extrabold leading-tight tracking-tight text-white md:text-5xl lg:text-6xl">{heroData.heading}</h1>
			<p class="mb-6 font-light text-gray-300 md:text-lg lg:mb-8 lg:text-xl">
				{heroData.subheading}
			</p>
			<a
				href={heroData.buttonLink}
				class="focus:ring-primary-900 dark:bg-primary-600 inline-flex items-center rounded-lg bg-primary px-5 py-3 text-center font-bold text-white text-lg hover:bg-primary focus:outline-none focus:ring-4 dark:hover:bg-primary dark:focus:ring-primary border-2 border-white"
				>{heroData.buttonText}</a
			>
		</div>
	</div>
</section>
